<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <timestamp key="timestamp" datePattern="yyyyMMdd_HHmmss" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>[%highlight(%-5level)] [%d{HH:mm:ss.SSS}] [%green(%logger) / %thread] %m%n</pattern>
        </encoder>
    </appender>

    <logger name="GLaDOS" level="ALL" />
    <logger name="Plugin" level="ALL" />
    <logger name="Subscription" level="ALL" />
    <logger name="Penicillin" level="ALL"/>
    <logger name="net.dv8tion.jda" level="ERROR" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
